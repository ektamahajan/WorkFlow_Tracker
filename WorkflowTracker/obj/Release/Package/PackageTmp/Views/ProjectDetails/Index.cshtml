
@model IEnumerable<WorkflowTracker.Models.ProjectDetail>

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>

<p> Last Logged: @Session["lastLoggedTime"]</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Progress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstOrgCompDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstCurrCompDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActCompDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProjectName, "Index", "StepDetails", new { id = item.ProjectID }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Progress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstOrgCompDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstCurrCompDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActCompDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProjectID }) 
          @*  @Html.ActionLink("Delete", "Delete", new { id=item.ProjectID })*@
        </td>
    </tr>
}

</table>
